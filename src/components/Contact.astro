---

const { contactInfos, legalInfos} = Astro.props;
import { Image } from 'astro:assets';
import profileImage from '../assets/profile.png';
console.log("props re√ßues :", Astro.props);
---
<div class="card w-full bg-base-100 shadow-sm relative p-4">
  <h1 class="text-2xl font-bold">{contactInfos.company_name}</h1>
  <h2 class="text-xl font-semibold">{contactInfos.individual_name}</h2>
  <div class="avatar mx-auto my-2">
    <div class="w-30 rounded-full">
      <Image src={profileImage} alt="{contactInfos.individual_name}" />
    </div>
  </div>
  <div class="card-body">
    <div class="w-full flex justify-between"> 
      <ul class="">
        <li>{contactInfos.address}</li>
        <li>{contactInfos.website}</li>
        <li>{contactInfos.email}</li>
      </ul>
      <ul class="">
        <li>TVA {legalInfos.vat_number}</li>
        <li>{contactInfos.phone}</li>
      </ul>


  </div>
</div>
